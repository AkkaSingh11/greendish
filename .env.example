# API Configuration
DEBUG=true
MAX_IMAGES=5
MAX_FILE_SIZE_MB=10

# OCR Configuration
# Leave blank to auto-detect the binary
TESSERACT_CMD=
OCR_LANG=eng

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:8001
MCP_TIMEOUT=30

# Classification Settings (for Phase 3+)
CONFIDENCE_THRESHOLD=0.4
USE_KEYWORD_FALLBACK=true

# LangSmith Configuration (for Phase 7+)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=convergefi-menu-analyzer

# Groq Configuration (primary provider)
GROQ_API_KEY=your_groq_api_key_here
GROQ_BASE_URL=https://api.groq.com/openai/v1
GROQ_PRIMARY_MODEL=openai/gpt-oss-20b
GROQ_REQUEST_TIMEOUT=30

# OpenRouter Configuration (fallback provider)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_PRIMARY_MODEL=deepseek/deepseek-chat-v3.1
OPENROUTER_FALLBACK_MODEL=
OPENROUTER_REQUEST_TIMEOUT=30
OPENROUTER_APP_NAME=ConvergeFi-MenuAnalyzer
