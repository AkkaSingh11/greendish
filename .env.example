DEBUG=true
MAX_IMAGES=5
MAX_FILE_SIZE_MB=10

# OCR Configuration
TESSERACT_CMD=  # Leave empty for auto-detect
OCR_LANG=eng

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:8001
